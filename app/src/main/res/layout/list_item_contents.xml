<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/watchedDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/ic_video_watched"/>

    <TextView
        android:id="@+id/lblListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/watchedDot"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:text="How was that"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#0d0d0d" />

        <TextView
            android:id="@+id/childTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblListItem"
            android:layout_marginLeft="46dp"
            android:textColor="@color/com_facebook_blue"
            android:textStyle="bold"
            android:text="Free video . "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblListItem"
            android:text="1m 17s"
            android:layout_toRightOf="@+id/childTitle" />

    </RelativeLayout>